{% extends 'base.jinja2' %}

{% block subtitle %}Add Donations{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p style="color:red;">{{ error }}</p>{% endif %}
    <label for="donor">Donor Name: </label><input type="text" id="donor", name="donor">
    <label for="donation">Donation Amount: </label><input type="text" id="donation", name="donation">
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}